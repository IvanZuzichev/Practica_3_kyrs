<Page x:Class="Practica_3_kyrs.Master_Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica_3_kyrs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Master_Order">

    <Grid Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Button x:Name="back_btn" Grid.Column="1" Grid.Row="2" Content="Назад" Background="Green" Foreground="White" Click="back_btn_Click"/>
        <DataGrid x:Name="order_m_table" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2"/>
        <Frame x:Name="master_status_page" Grid.ColumnSpan="5" Grid.RowSpan="4"/>
    </Grid>
</Page>
